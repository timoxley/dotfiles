#plugins=()

source $ZSH/oh-my-zsh.sh

# Kill any annoying right prompt content
RPROMPT=''

# customisation to blinks for iterm2 marks integration
export PROMPT="$(echo $PROMPT | tr '\n' '|' | sed 's/%f%k%b%}|/%f%k%b%}/' | tr '|' '\n')"

export PATH=/usr/local/bin:$PATH
export PATH=$PATH:/usr/local/sbin
